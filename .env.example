# Sinch MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Required - Get these from your Sinch Dashboard
SINCH_SERVICE_PLAN_ID=your-service-plan-id-here
SINCH_API_TOKEN=your-api-token-here

# Optional - Required for Numbers API
SINCH_PROJECT_ID=your-project-id-here

# Optional - Multiple Parent Projects (comma-separated list)
# Perfect for multi-tenant/reseller scenarios
SINCH_PARENT_PROJECTS=project-1-id,project-2-id,project-3-id

# Optional - For OAuth authentication
SINCH_CLIENT_ID=your-client-id-here
SINCH_CLIENT_SECRET=your-client-secret-here

# Optional - API Region (us, eu, au, br, ca)
SINCH_REGION=us

